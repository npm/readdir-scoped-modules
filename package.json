{
  "name": "readdir-scoped-modules",
  "version": "1.0.2",
  "description": "Like `fs.readdir` but handling `@org/module` dirs as if they were a single entry.",
  "main": "readdir.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "debuglog": "^1.0.1",
    "dezalgo": "^1.0.0",
    "graceful-fs": "^4.1.2",
    "once": "^1.3.0"
  },
  "devDependencies": {
    "@npmcli/eslint-config": "^4.0.0",
    "@npmcli/template-oss": "4.6.0",
    "tap": "^16.3.0"
  },
  "scripts": {
    "test": "tap",
    "lint": "eslint \"**/*.js\"",
    "postlint": "template-oss-check",
    "template-oss-apply": "template-oss-apply --force",
    "lintfix": "npm run lint -- --fix",
    "snap": "tap",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npm/readdir-scoped-modules.git"
  },
  "author": "GitHub Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/npm/readdir-scoped-modules/issues"
  },
  "homepage": "https://github.com/npm/readdir-scoped-modules",
  "files": [
    "bin/",
    "lib/"
  ],
  "engines": {
    "node": "^14.17.0 || ^16.13.0 || >=18.0.0"
  },
  "templateOSS": {
    "//@npmcli/template-oss": "This file is partially managed by @npmcli/template-oss. Edits may be overwritten.",
    "version": "4.6.0"
  },
  "tap": {
    "nyc-arg": [
      "--exclude",
      "tap-snapshots/**"
    ]
  }
}
